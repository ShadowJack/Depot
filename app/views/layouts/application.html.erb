
<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START:stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id="code.slt"/> -->
<!-- END:stylesheet -->
  <%= javascript_include_tag :application %>
  <%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %><!-- <label id="code.depot.e.title"/> -->
  </div>
  <div id="columns">
    <div id="side">
      <%= link_to "Home", store_url%> <br />
      <div id="user_nav">
      	<% if user_signed_in? %>
      		<%= link_to "Orders", orders_path %> <br />
      		<%= link_to "Products", products_path%> <br /> <br />
      		<%= link_to "Sign_out", destroy_user_session_path, :method => :delete %>
      	<% else %>
      		<%= link_to "Sign_in", new_user_session_path %> <br />
      		<%= link_to "Sign_up", new_user_registration_path %>
      	<% end %>
      </div>
      <div id="datetime">
      	<% @datetime = Time.now %>
      	<%= @datetime.strftime("It's %d-%m-%Y %H:%M")%>
      </div>
      <div id="cart">
      	<% if not @cart == nil %>
   	  		<%= render @cart %>
   	  	<% end %>
   	  </div>
    </div>
    <div id="main">
      <%= yield %><!-- <label id="code.depot.e.include"/> -->
    </div>
  </div>
</body>
</html>
